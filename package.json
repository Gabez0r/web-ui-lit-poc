{
  "name": "nuxeo-elements-tutorial-lit",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack-dev-server --env development",
    "build": "webpack --env production",
    "build:analyze": "webpack --env production --analyze",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "mocha test/integration --timeout=10000",
    "test:unit": "polymer test --module-resolution=node --npm",
    "test:sauce": "polymer test --module-resolution=node --npm -s 'windows 10/microsoftedge@17' -s 'macos 10.13/safari@11'",
    "test:regenerate_screenshots": "mocha test/integration/screenshots-baseline/regenerate.js --timeout=15000",
    "lint:tslint": "tslint --project .",
    "lint:prettier": "prettier '**/*.ts' --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "lint": "npm run lint:tslint && npm run lint:prettier",
    "format:tslint": "tslint --project . --fix",
    "format:prettier": "prettier '**/*.js' --write",
    "format": "npm run format:tslint && npm run format:prettier"
  },
  "dependencies": {
    "@nuxeo/nuxeo-elements": "^3.0.0-SNAPSHOT",
    "@nuxeo/nuxeo-ui-elements": "^3.0.0-SNAPSHOT",
    "@polymer/app-layout": "^3.0.0",
    "@polymer/iron-icons": "^3.0.1",
    "@polymer/polymer": "^3.1.0",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "lit-element": "^2.0.0-rc.2",
    "pwa-helpers": "^0.9.0"
  },
  "devDependencies": {
    "@polymer/test-fixture": "^4.0.2",
    "axe-core": "^3.0.0",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "html-webpack-plugin": "^4.0.0-alpha",
    "mocha": "^5.2.0",
    "pixelmatch": "^4.0.2",
    "polymer-cli": "^1.9.2",
    "prettier": "^1.15.3",
    "puppeteer": "^1.5.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-webpack-plugin": "^2.0.1",
    "typescript": "^3.2.2",
    "wct-mocha": "^1.0.0",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  }
}
